@page
@model Biblioteka.Views.Books.CreateModel

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/Shared/action_buttons.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/Books/book_add.css" asp-append-version="true" />

<div class="main_container padding_top_1rem">
    <div class="list_header">
        <h3>Dodawanie nowej książki</h3>
    </div>
    <div class="book_add_form_div">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="d-flex flex-row justify-content-center align-items-center gap-5 w-75 book_add_in_form_div">
                <div class="d-flex flex-column justify-content-center align-items-center gap-3 w-100">
                    <div class="form-floating w-100">               
                        <input asp-for="Book.title" class="form-control" aria-required="true"/>
                        <label asp-for="Book.title" class="control-label"></label>
                        <span asp-validation-for="Book.title" class="text-danger"></span>
                    </div>
                    <div class="form-floating w-100">
                        <input asp-for="Book.ISBN" class="form-control" aria-required="true" />
                        <label asp-for="Book.ISBN" class="control-label"></label>     
                        <span asp-validation-for="Book.ISBN" class="text-danger"></span>
                    </div>
                    <div class="form-floating w-100">
                        <input asp-for="Book.description" class="form-control" aria-required="true" />
                        <label asp-for="Book.description" class="control-label"></label>
                        <span asp-validation-for="Book.description" class="text-danger"></span>
                    </div>
                    <div class="form-floating w-100">
                        <input asp-for="Book.availableCopys" class="form-control" aria-required="true" />
                        <label asp-for="Book.availableCopys" class="control-label"></label>  
                        <span asp-validation-for="Book.availableCopys" class="text-danger"></span>
                    </div>
                    <div class="form-floating w-100">
                        <input asp-for="Book.releaseDate" class="form-control" aria-required="true" />
                        <label asp-for="Book.releaseDate" class="control-label"></label>
                        <span asp-validation-for="Book.releaseDate" class="text-danger"></span>
                    </div>
                    <div class="form-floating w-100">
                        <select asp-for="GenreId" class="form-control form-select" asp-items="Model.Genre"></select>
                        <label asp-for="GenreId" class="control-label"></label>   
                        <span asp-validation-for="GenreId" class="text-danger"></span>
                    </div>
                    <div class="form-floating w-100">
                        <select asp-for="TagIds" asp-items="Model.Tag" class="form-control form-select" multiple="multiple"></select>
                        <label asp-for="TagIds" class="control-label"></label>            
                        <span asp-validation-for="TagIds" class="text-danger"></span>
                    </div>
                    <div class="form-floating w-100">              
                        <select asp-for="BookTypeId" class="form-control form-select" asp-items="Model.Type"></select>
                        <label asp-for="BookTypeId" class="control-label"></label>
                        <span asp-validation-for="BookTypeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex flex-column justify-content-center align-items-center gap-3 w-100">                  
                    <div class="form-floating w-100">
                        <select asp-for="PublisherId" class="form-control form-select" asp-items="Model.Publisher"></select>
                        <label asp-for="PublisherId" class="control-label"></label>
                        <span asp-validation-for="PublisherId" class="text-danger"></span>
                    </div>
                    <div class="form-floating w-100">
                        <select asp-for="AuthorIds" asp-items="Model.Author" class="form-control" multiple="multiple"></select>
                        <label asp-for="AuthorIds" class="control-label"></label>
                        <span asp-validation-for="AuthorIds" class="text-danger"></span>
                    </div>
                    <div class="form-floating w-100">
                        <input asp-for="Book.image" class="form-control book_add_file_input_style" />
                        <label asp-for="Book.image" class="control-label"></label>
                        <span asp-validation-for="Book.image" class="text-danger"></span>
                    </div>
                    <div class="form-floating w-100">
                        <input asp-for="Book.ebook" class="form-control book_add_file_input_style" />
                        <label asp-for="Book.ebook" class="control-label"></label>
                        <span asp-validation-for="Book.ebook" class="text-danger"></span>
                    </div>
                    <div class="form-floating w-100">
                        <input asp-for="Book.audiobook" class="form-control book_add_file_input_style" />
                        <label asp-for="Book.audiobook" class="control-label"></label>
                        <span asp-validation-for="Book.audiobook" class="text-danger"></span>
                    </div>
                    <div class="form-floating w-100">
                        <input asp-for="Book.floor" class="form-control" />
                        <label asp-for="Book.floor" class="control-label"></label>
                        <span asp-validation-for="Book.floor" class="text-danger"></span>
                    </div>
                    <div class="form-floating w-100">
                        <input asp-for="Book.alley" class="form-control" />
                        <label asp-for="Book.alley" class="control-label"></label>
                        <span asp-validation-for="Book.alley" class="text-danger"></span>
                    </div>
                    <div class="form-floating w-100">
                        <input asp-for="Book.rowNumber" class="form-control" />
                        <label asp-for="Book.rowNumber" class="control-label"></label>
                        <span asp-validation-for="Book.rowNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <input type="hidden" asp-for="suggestion.suggestionId" />
            @if (Model.suggestion != null)
            {
                <button class="action-button biggest-button action-default mt-5" id="registerSubmit" type="submit">Zrealizuj zamówienie</button>
            }
            else
            {
                <button class="action-button biggest-button action-default mt-5" id="registerSubmit" type="submit">Dodaj</button>
            }
            <button class="action-button action-cancel mt-3 fill-form-btn" type="button">Wypełnij formularz przykładowymi danymi</button>
        </form>
    </div>
</div>
<script type="module" src="~/js/Books/book_add_form_filler.js"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}