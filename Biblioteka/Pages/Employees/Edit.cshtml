@page
@model Biblioteka.Pages.Employees.EditModel

@{
    ViewData["Title"] = "Edit";
}
<partial name="_UnderHeaderEdit" />

<link rel="stylesheet" href="~/css/Shared/action_buttons.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/Employees/Edit.css" asp-append-version="true" />
<div class="main_container">

            <div class="edit-form">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Employee.employeeId" />
                    <div class="form-group">
                        <label asp-for="Employee.name" class="control-label"></label>
                        <input asp-for="Employee.name" class="form-control" />
                        <span asp-validation-for="Employee.name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Employee.surname" class="control-label"></label>
                        <input asp-for="Employee.surname" class="form-control" />
                        <span asp-validation-for="Employee.surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Employee.dateOfEmployment" class="control-label"></label>
                        <input asp-for="Employee.dateOfEmployment" class="form-control" />
                        <span asp-validation-for="Employee.dateOfEmployment" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Employee.position" class="control-label"></label>
                        <select asp-for="@Model.PositionId" class="form-control" asp-items="Model.Positions"></select>
                    </div>
                    <div class="form_buttons">
                        <div class="form-group">
                            <input type="submit" value="Zapisz" class="action-button action-confirm" />
                        </div>
                        <div>
                            <a class="lightText action-button action-default" asp-page="./Index">Wróć</a>
                        </div>
                    </div>
                   
                </form>
            </div>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
