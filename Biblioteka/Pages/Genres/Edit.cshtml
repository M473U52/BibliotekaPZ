@page
@model Biblioteka.Pages.Genres.EditModel

@{
    ViewData["Title"] = "Edit";
}
<div class="main_container">
    <div class="inner_container">
        <div class="list_header">
            <h1>Edycja gatunku: @Model.Genre.name</h1>
        </div>
        <div class="form_div">
            <div class="form_div_login">
                <form method="post">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Genre.genreId" />
                    <div class="form-group">
                        <label asp-for="Genre.name" class="control-label"></label>
                        <input asp-for="Genre.name" class="form-control" />
                        <span asp-validation-for="Genre.name" class="text-danger"></span>
                    </div>
                    <div class="form_buttons">
                        <div class="form-group">
                            <input type="submit" value="Zapisz" class="button buttonGreen lightText" />
                        </div>
                        <div>
                            <a class="lightText button buttonDefault" asp-page="./Index">Wróć</a>
                        </div>
                    </div>                 
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
