@page
@model Biblioteka.Pages.Authors.IndexModel

@{
    ViewData["Title"] = "Index";
}
@using Biblioteka.Repositories

<div class="main_container">
    <div class="inner_container">
        <div class="list_header">
            <h1>Autorzy</h1>
        </div>
        <div class="move_right">
            <button class="button buttonDefault">
                <a class="nav-link lightText" asp-page="Create">Dodaj nowego autora</a>
            </button>
            <button class="button buttonDefault">
                <a class="nav-link lightText" asp-page="AddAuthor">Nadaj prawa autora</a>
            </button>
        </div>
        <div class="list_div">
            <div class="table-responsive author_table_scroll">
                <table class="tableToModify">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Author[0].name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Author[0].surname)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Author[0].birthDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Author[0].country)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Author[0].nickname)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Author)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.surname)
                                </td>
                                <td>
                                    @item.birthDate.ToString("yyyy-MM-dd")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.country)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nickname)
                                </td>
                                <td>
                                    <button class="button buttonGreen"><a class="lightText" asp-page="./Edit" asp-route-id="@item.authorId">Edytuj</a></button>
                                    <button class="button buttonRed"><a class="lightText" asp-page="./Delete" asp-route-id="@item.authorId">Usuń</a></button>
                                    <button class="button buttonYellow"><a class="lightText" asp-page="./Details" asp-route-id="@item.authorId">Detale</a></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
