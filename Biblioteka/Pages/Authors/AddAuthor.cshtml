@page
@model Biblioteka.Pages.Authors.AddAuthorModel

@{
    ViewData["Title"] = "Create";
}
<div class="main_container">
    <div class="inner_container">
        <div class="list_header">
            <h1>Dodaj nowego autora</h1>
        </div>
        <div class="form_div">
            <div class="form_div_login">
                <form method="post">
                    <hr />
                    <div class="form-group">
                        <label asp-for="Reader" class="control-label"></label>
                        <select asp-for="@Model.ReaderId" class="form-control" asp-items="Model.Reader"></select>
                    </div>
                    <div class="form_buttons">
                        <div class="form-group">
                            <input type="submit" value="Dodaj" class="button buttonGreen" />
                        </div>
                        <div>
                            <a class="lightText button buttonDefault" asp-page="./Index">Wróć</a>
                        </div>
                    </div>  
                </form>   
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
