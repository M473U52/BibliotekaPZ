@model Biblioteka.Pages.RoomReservations.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<div class="main_container">
    <div class="inner_container">
        <div class="list_header">
            <h1>Anulowanie rezerwacji Sali</h1>
        </div>
        <div class="form_div">
            <div class="form_div_login">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.RoomReservation.begginingOfReservationDate)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.RoomReservation.begginingOfReservationDate)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.RoomReservation.endOfReservationDate)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.RoomReservation.endOfReservationDate)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.RoomReservation.room)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.RoomReservation.room.FullData)
