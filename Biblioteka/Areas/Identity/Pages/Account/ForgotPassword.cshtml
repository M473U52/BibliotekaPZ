@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}


<div class="main_container">
    <div class="form_div_login" style=" text-align:center">
        <div style="display: flex; align-items: center; margin-left:auto; margin-right:auto;">
            <p style="font-size:80px; font-weight:bold; margin: 0;">!</p>
            <p style="padding: 10px; margin: 0;">Nie pamiętasz hasła? Podaj email, aby je zresetować.</p>
        </div>
        <h2>Wprowadź swój email</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="button buttonDefault">Resetuj hasło</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
